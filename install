if [ -f /etc/debian_version ]; then 
   if fgrep -q -c '3.0' /etc/debian_version; then 
      echo Debian 3.0 detected; 
   fi;
fi

read -p "What's your username on the FLEX CVS server? " prmpt
cd ..
export CVS_RSH=ssh
export CVSEDITOR=emacs
cvs -d :ext:$prmpt@flex-cvs.lcs.mit.edu:/data/cvs co -A Classpath Code Realtime ImageRec Runtime
