dnl Process this file with autoconf to produce a configure script.
AC_INIT(include/jni.h)
AC_CONFIG_AUX_DIR(scripts)
AC_CANONICAL_SYSTEM
AM_INIT_AUTOMAKE(flexrun, 0.0)
AM_CONFIG_HEADER(config.h)

dnl Checks for programs.
AC_PROG_CC
AC_PROG_RANLIB

dnl Checks for libraries.

dnl Checks for header files.
AC_STDC_HEADERS
AC_HAVE_HEADERS(sys/types.h)

dnl Checks for typedefs, structures, and compiler characteristics.
AC_C_CONST
dnl AC_TYPE_OFF_T
dnl AC_HEADER_TIME

dnl Checks for library functions.
AC_PROG_GCC_TRADITIONAL
AC_CHECK_FUNCS(select)

dnl Match the CPU to an arch/ directory.
case "$target_cpu" in
arm*) archdir=arm32 ;;
*)    archdir=$target_cpu ;;
esac

AC_LINK_FILES(arch/${archdir}, include/asm)
AC_OUTPUT(Makefile src/Makefile src/jni/Makefile)
